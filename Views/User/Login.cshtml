@using CRM.Types
@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="~/css/Login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

</head>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Namespaced CSS to avoid conflicts with your layout */
 
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <h2>Welcome Back</h2>
            <p>Please enter your credentials to access your account</p>
        </div>

        <div class="login-messages">
            @if (ViewData["ErrorMessage"] != null) {
                <p class="error"><i class="fas fa-exclamation-circle"></i>@ViewData["ErrorMessage"]</p>
            }
            @if (ViewData["SuccessMessage"] != null) {
                <p class="success"><i class="fas fa-check-circle"></i>@ViewData["SuccessMessage"]</p>
            }
        </div>

        <form class="login-form" method="post">
            <div class="login-form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="Email" required>
            </div>

            <div class="login-form-group">
                <label for="password">Password</label>
                <div class="login-password-wrapper">
                    <input type="password" id="password" name="Password" required>
                    <span class="password-toggle" id="passwordToggle">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
            </div>

            <div class="login-options">
                <div class="login-remember">
                    <input type="checkbox" id="remember" name="RememberMe">
                    <label for="remember">Remember me</label>
                </div>
                <a href="/Account/ForgotPassword" class="login-forgot">Forgot Password?</a>
            </div>

            <button type="submit" class="login-button">
                Login
                <span class="login-button-icon">
                    <i class="fas fa-arrow-right"></i>
                </span>
            </button>
        </form>

        <div class="social-divider">
            <div class="social-divider-line"></div>
            <div class="social-divider-text">or login with</div>
            <div class="social-divider-line"></div>
        </div>

        <div class="social-buttons">
            <button class="social-button social-facebook">
                <i class="fab fa-facebook-f"></i>
            </button>
            <button class="social-button social-google">
                <i class="fab fa-google"></i>
            </button>
            <button class="social-button social-twitter">
                <i class="fab fa-twitter"></i>
            </button>
            <button class="social-button social-linkedin">
                <i class="fab fa-linkedin-in"></i>
            </button>
        </div>

        <div class="login-footer">
            Don't have an account? <a href="/Account/Register">Sign up now</a>
        </div>
    </div>

    <script>
        // Password toggle functionality
        document.addEventListener('DOMContentLoaded', function() {
            const passwordToggle = document.getElementById('passwordToggle');
            const passwordField = document.getElementById('password');
            
            if (passwordToggle && passwordField) {
                passwordToggle.addEventListener('click', function() {
                    const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordField.setAttribute('type', type);
                    
                    // Change the icon based on password visibility
                    const eyeIcon = this.querySelector('i');
                    if (type === 'text') {
                        eyeIcon.classList.remove('fa-eye');
                        eyeIcon.classList.add('fa-eye-slash');
                    } else {
                        eyeIcon.classList.remove('fa-eye-slash');
                        eyeIcon.classList.add('fa-eye');
                    }
                });
            }
        });
    </script>
</body>
</html>