@{

    ViewData["Title"] = "Register";
}
<head>
    <link rel="stylesheet" href="~/css/Register.css">
</head>


<div class="register-container">
    <!-- Backend Error and Success Messages -->
    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="error-message">@ViewData["ErrorMessage"]</div>
    }
    @if (ViewData["SuccessMessage"] != null)
    {
        <div class="success-message">@ViewData["SuccessMessage"]</div>
    }
    
    <div class="register-card">
        <div class="register-header">
            <h2>Create an Account</h2>
            <p>Please fill in the details to register</p>
            <div class="header-decoration"></div>
        </div>
        
        <div class="register-body">
            <form  method="post">
                <div class="form-group">
                    <label for="Username" class="required-field">Username</label>
                    <input type="text" id="fullname" name="Username" placeholder="Enter your full name" required>
                </div>
                
                <div class="form-group">
                    <label for="email" class="required-field">Email Address</label>
                    <input type="email" id="email" name="Email" placeholder="Enter your email" required>
                </div>
                
                <div class="form-group">
                    <label for="password" class="required-field">Password</label>
                    <input type="password" id="password" name="Password" placeholder="Create a password" required>
                    <span class="password-toggle" id="passwordToggle">👁️</span>
                </div>
                
                
                <button type="submit" class="register-btn">
                    <span class="btn-text">Register Now</span>
                    <span class="btn-icon">→</span>
                </button>
            </form>
            
            <div class="social-divider">
                <span>or register with</span>
            </div>
            
            <div class="social-login">
                <a href="#" class="social-btn facebook">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" class="social-icon">
