@{
    ViewData["Title"] = "Seller Dashboard";
    var sellerName = ViewBag.Username ?? "Seller";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Seller.css">

</head>
<body>
    <div class="dashboard-container">
        <div class="header">
            <h1>Welcome Back, @sellerName!</h1>
            <p class="date" id="current-date"></p>
        </div>

        <div class="nav-buttons">
            <a href="/seller/createproduct" class="nav-btn add-product-btn">
                <i class="fas fa-plus-circle"></i>
                <span>Add Product</span>
            </a>
        </div>

        <div class="nav-buttons-row">
            <a href="/seller/myproducts" class="nav-btn">
                <i class="fas fa-box"></i>
                <span>Products</span>
            </a>
            <a href="/seller/myarchive" class="nav-btn">
                <i class="fas fa-archive"></i>
                <span>Archive</span>
            </a>
            <a href="/seller/deletedproducts" class="nav-btn">
                <i class="fas fa-trash-alt"></i>
                <span>Deleted</span>
            </a>
            <a href="/user/changeroletobuyer" class="nav-btn">
                <i class="fas fa-exchange-alt"></i>
                <span>Change Role</span>
            </a>
        </div>

        <div class="logout-section mt-5">
            <button class="logout-btn" onclick="location.href='/User/Logout'">
                <i class="fas fa-sign-out-alt"></i>
                <span>Logout</span>
            </button>
        </div>
    </div>

    <script>
        // Set current date dynamically
        function setCurrentDate() {
            const now = new Date();
            const options = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            };
            document.getElementById('current-date').textContent = now.toLocaleDateString('en-US', options);
        }

        // Add floating animation to buttons after load
        function addFloatingAnimations() {
            const buttons = document.querySelectorAll('.nav-btn');
            buttons.forEach((btn, index) => {
                setTimeout(() => {
                    btn.style.animation += ', float 2.5s ease-in-out infinite';
                }, 1500 + (index * 300));
            });
        }

        // Initialize dashboard
        document.addEventListener('DOMContentLoaded', function() {
            // Set current date
            setCurrentDate();
            
            // Add floating animations
            setTimeout(addFloatingAnimations, 800);
            
            // Update date every minute
            setInterval(setCurrentDate, 60000);
        });
    </script>
</body>
</html>